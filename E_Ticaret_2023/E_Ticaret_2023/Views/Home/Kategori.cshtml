@using E_Ticaret_2023.Models
@model List<Urunler>
@{
    ViewBag.Title = ViewBag.Kategori;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main>
    <div class="row">
        <section class="col-md-4" aria-labelledby="gettingStartedTitle">
            <h2 id="gettingStartedTitle">Getting started</h2>
            <ul class="list-unstyled">
                @foreach (var item in (List<Kategoriler>)ViewBag.KategoriListesi)   
                {
                    <li>
                        @Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriID })
                    </li>
                }
            </ul>
        </section>

        <section class="col-md-4" aria-labelledby="librariesTitle">
            <h2 id="librariesTitle">Ürünler</h2>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-4" style="border:solid">
                        <h5>@item.UrunAdi</h5>
                        <img src="~/Resim/@(item.UrunID).jpg" width="100" />
                        <br /><br />
                        <p>
                            <a href="/Home/Urun/@item.UrunID" class="btn btn-secondary">Ürün Detay &raquo;</a>
                            <span style="font-size:14px;font-weight:bold;float:right">@item.UrunFiyati TL</span>
                        </p>
                    </div>
                }
            </div>
        </section>
    </div>
</main>

